package repaso1;

import javax.swing.*;
import java.awt.EventQueue;

public class ejec3 {
    private JFrame frame;
    private JTextField txtNombreReceta;
    private JTextArea textAreaIngredientes;
    private JTextArea textAreaRecetas;

    public static void main(String[] args) {
        EventQueue.invokeLater(() -> {
            try {
                ejec3 window = new ejec3();
                window.frame.setVisible(true);
            } catch (Exception e) {
                e.printStackTrace();
            }
        });
    }

    public ejec3() {
        initialize();
    }

    private void initialize() {
        frame = new JFrame("Gestor de Recetas");
        frame.setBounds(100, 100, 600, 500);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.getContentPane().setLayout(null);

        txtNombreReceta = new JTextField();
        txtNombreReceta.setBounds(20, 20, 200, 25);
        frame.getContentPane().add(txtNombreReceta);

        JLabel lblIngredientes = new JLabel("Ingredientes:");
        lblIngredientes.setBounds(20, 60, 100, 25);
        frame.getContentPane().add(lblIngredientes);

        textAreaIngredientes = new JTextArea();
        textAreaIngredientes.setBounds(20, 90, 200, 150);
        frame.getContentPane().add(textAreaIngredientes);

        JButton btnGuardar = new JButton("Guardar Receta");
        btnGuardar.setBounds(20, 250, 120, 25);
        frame.getContentPane().add(btnGuardar);

        JButton btnCargar = new JButton("Cargar Recetas");
        btnCargar.setBounds(150, 250, 120, 25);
        frame.getContentPane().add(btnCargar);

        textAreaRecetas = new JTextArea();
        textAreaRecetas.setBounds(250, 20, 300, 400);
        frame.getContentPane().add(textAreaRecetas);
    }
}
